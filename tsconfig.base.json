{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@citrus-poc-nx/storybook": ["apps/storybook/src/index.ts"],
      "@citrus-poc-nx/tools": ["libs/tools/src/index.ts"],
      "@citrus-poc/select-baseui": ["libs/select-baseui/src/index.ts"],
      "@citrus-poc/select-shadcn": ["libs/select-shadcn/src/index.ts"],
      "@citrus-poc/select-static": ["libs/select-static/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
